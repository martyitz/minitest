#  Generic targets for cleaning up the directory
clean:
	-/bin/rm -rf meas.*
	-/bin/rm -rf dbase.* 
	-/bin/rm -f *core*
	-/bin/rm -f *log.*
	@echo ""
	@echo ""

clobber: clean
	-/bin/rm -rf *.o $(TARGET)
	@echo ""
	@echo ""


